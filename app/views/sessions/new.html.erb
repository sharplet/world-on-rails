<%= content_for :nav, nav_pills('Log in') %>

<h1>Log in</h1>
<%= form_tag sessions_path, :class => 'form-horizontal' do %>
  <div class="control-group">
    <%= label_tag :id, 'Username', :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag :id %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :password, 'Password', :class => 'control-label' %>
    <div class="controls">
      <%= password_field_tag :password %>
    </div>
  </div>
  <div class="control-group">
    <%= submit_tag 'Log in', :class => 'btn controls' %>
  </div>
<% end %>
