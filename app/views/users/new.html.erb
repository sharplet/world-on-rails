<%= content_for :nav, nav_pills('Sign Up') %>

<h1>Sign up!</h1>
<p class="lead">I can show you the world...</p>

<%= simple_form_for @user, :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.input :id, :label => 'Username' %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.button :submit, :class => 'controls' %>
<% end %>
